#define MAX 100000
#include <iostream>

using namespace std;
int adj[MAX] = { 0 };
int  money[MAX] = { 0 };
int main()
{  
   //동적계획법 vs 그리다
   //백준 13305
	int n;
	cin >> n;
	for (int i = 0; i < n - 1; i++) {
		cin >> adj[i];   //i에서 출발해서 옆도시 길이
	}
	//각 도시의 주유 가격

	for (int i = 0; i <n; i++) {
		cin >> money[i];
	}

	//최소 비용 구하기
	long long count = 0;
	

	int i = 0;
	int flag=0;
	long long mins = money[0];
	
	//mins는 그대로고 업데이트 하는 방식
	//이전에 선택된거 이후부터만 선택 가능
	for (i = 0; i < n - 1; i++) {
		//for (int j = flag; j <= i; j++) {
			if (mins >money[i]){
				//flag = j;
				mins = money[i];
				
			}
			
		//}
		count += mins*adj[i];
		
	}
	printf("%lld", count);




}
	
	




