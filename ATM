#define _CRT_SECURE_NO_WARNINGS
#include<iostream>
#include<string.h>
#include<stdio.h>
#include<vector>
#include<algorithm>
#define MAX 1000
using namespace std;

vector<int> person; //걸리는 시간


int main() {
	
	ios::sync_with_stdio(false);
	//백준 11399 
	//ATM 한대
	int n;
	int s;
	cin >> n;
	for (int i = 0; i < n; i++) {
		cin >> s;
		person.push_back(s);
	}

	//각 사람이 돈을 인출하는데 필요한 시간의 합 쵷소값
	sort(person.begin(), person.end());
	int sum = 0;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j <= i; j++) {
			sum += person[j];
		}

	}
	cout << sum;


}

